{
    "name": "${localEnv:PROJECT_NAME}",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "USERNAME": "${localEnv:HOST_USERNAME}",
            "USER_UID": "${localEnv:HOST_UID}",
            "USER_GID": "${localEnv:HOST_GID}",
            "LOCALE": "${localEnv:LOCALE}",
            "INSTALL_CLAUDE": "${localEnv:INSTALL_CLAUDE}",
            "CLAUDE_INSTALL_SHA256": "${localEnv:CLAUDE_INSTALL_SHA256}"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.acceptSuggestionOnTab": false,
                "editor.tabCompletion": "off",
                "editor.acceptSuggestionOnEnter": "off",
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "icon": "terminal-bash"
                    }
                }
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "DavidAnson.vscode-markdownlint",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-vscode-remote.remote-containers",
                "anthropic.claude-code"
            ]
        }
    },
    "remoteUser": "${localEnv:HOST_USERNAME}",
    "updateRemoteUserUID": true,
    "workspaceMount": "source=${localWorkspaceFolder},target=${localEnv:WORKSPACE_FOLDER},type=bind,consistency=cached",
    "workspaceFolder": "${localEnv:WORKSPACE_FOLDER}",
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer,target=/home/${localEnv:HOST_USERNAME}/.devcontainer,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.ssh,target=/home/${localEnv:HOST_USERNAME}/.ssh,type=bind,consistency=cached",
        "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
    ],
    "postCreateCommand": "chmod +x ~/.devcontainer/scripts/post-create.sh && ~/.devcontainer/scripts/post-create.sh",
    "shutdownAction": "stopContainer",
    "containerEnv": {
        "USERNAME": "${localEnv:HOST_USERNAME}",
        "USER_UID": "${localEnv:HOST_UID}",
        "USER_GID": "${localEnv:HOST_GID}",
        "LOCALE": "${localEnv:LOCALE}",
        "WORKSPACE_FOLDER": "${localEnv:WORKSPACE_FOLDER}",
        "CONTAINER_MEMORY": "${localEnv:CONTAINER_MEMORY}",
        "CONTAINER_CPUS": "${localEnv:CONTAINER_CPUS}",
        "CONTAINER_SHM_SIZE": "${localEnv:CONTAINER_SHM_SIZE}",
        "CONTAINER_HOSTNAME": "${localEnv:CONTAINER_HOSTNAME}",
        "CONTAINER_HOSTNAME_EDITOR": "${localEnv:CONTAINER_HOSTNAME_EDITOR}",
        "CONTAINER_HOSTNAME_DEVCONTAINER": "${localEnv:CONTAINER_HOSTNAME_DEVCONTAINER}",
        "CONTAINER_HOSTNAME_CLAUDE": "${localEnv:CONTAINER_HOSTNAME_CLAUDE}",
        "DEVCONTAINER_CONTEXT": "${localEnv:DEVCONTAINER_CONTEXT}",
        "GIT_USER_NAME": "${localEnv:GIT_USER_NAME}",
        "GIT_USER_EMAIL": "${localEnv:GIT_USER_EMAIL}",
        "GIT_REMOTE_URL": "${localEnv:GIT_REMOTE_URL}",
        "DOCKER_IMAGE_NAME": "${localEnv:DOCKER_IMAGE_NAME}",
        "DOCKER_IMAGE_TAG": "${localEnv:DOCKER_IMAGE_TAG}"
    },
    "runArgs": [
        "--name=${localEnv:DOCKER_IMAGE_NAME}",
        "--hostname=${localEnv:CONTAINER_HOSTNAME}",
        "--env-file=${localWorkspaceFolder}/.env",
        "--env=SSH_AUTH_SOCK=/ssh-agent",
        "--memory=${localEnv:CONTAINER_MEMORY}",
        "--cpus=${localEnv:CONTAINER_CPUS}",
        "--shm-size=${localEnv:CONTAINER_SHM_SIZE}"
    ],
    "forwardPorts": [],
    "remoteEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent",
        "PATH": "/usr/local/bin:/usr/local/sbin:/usr/sbin:/usr/bin:/sbin:/bin"
    }
}
