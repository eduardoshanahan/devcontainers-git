# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,json,ts,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
shell_variant = bash
binary_next_line = true
switch_case_indent = true
space_redirects = true

[Dockerfile]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
multi_line_output = 3

[*.{ini,cfg}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
indent_sequence = true

[*.{json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100
