# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python files
*.py text diff=python

# Ansible files
*.yml text
*.yaml text
*.j2 text

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
*.conf text
*.cfg text
*.ini text
*.json text

# Git files
.gitattributes text
.gitignore text
.gitconfig text

# Don't modify binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary
*.pyc binary
*.pdf binary

# Ansible vault files
*vault* text diff=ansible-vault merge=ansible-vault
